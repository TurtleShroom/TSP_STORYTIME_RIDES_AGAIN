<Defs>

<!--- BORPA Goggles-->

<ThingDef ParentName="HatMakeableBase">
    <defName>BORPA_BorpaGoggles</defName>
    <label>borpa goggles</label>
    <description>Borpa eyes fashioned into goggles. The constant stare unsettles others. They allow the wearer to shoot with enhanced precision.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/BorpaGoggles</texPath>
      <drawSize>(0.9, 0.9)</drawSize>
	  <shaderType>CutoutComplex</shaderType>
	  <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<recipeMaker>
		<researchPrerequisite>ComplexClothing</researchPrerequisite>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
		</recipeUsers>
	</recipeMaker>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
    <costStuffCount>30</costStuffCount>
	<costList>
      <BORPA_BorpaEye>2</BORPA_BorpaEye>
    </costList>
    <uiIconScale>1.25</uiIconScale>
	<stuffCategories>
      <li>Fabric</li>
	  <li>Leathery</li>
    </stuffCategories>
	 <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>-0.10</SocialImpact>
      <ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <apparel>
	<countsAsClothingForNudity>false</countsAsClothingForNudity>
	<layers>
        <li>Overhead</li>
      </layers>
	  <defaultOutfitTags>
        <li>Solider</li>
      </defaultOutfitTags>
	<bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
	  <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/BorpaGoggles</wornGraphicPath>
    </apparel>
  </ThingDef>
  

