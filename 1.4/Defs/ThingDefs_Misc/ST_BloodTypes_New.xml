<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  <ThingDef ParentName="BaseFilth">
    <defName>Filth_BeanBlood</defName>
    <label>mashed beans</label>
    <statBases>
      <Beauty>-1</Beauty>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <graphicData>
      <texPath>Things/Items/Resources/Bean</texPath>
      <color>(143, 79, 66, 180)</color>
	  <drawSize>(0.33, 0.4)</drawSize>
    </graphicData>
    <filth>
      <ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
      <disappearsInDays>1~3</disappearsInDays>
      <rainWashes>false</rainWashes>
      <cleaningWorkToReduceThickness>10</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
      <cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
    </filth>
  </ThingDef>  
  
