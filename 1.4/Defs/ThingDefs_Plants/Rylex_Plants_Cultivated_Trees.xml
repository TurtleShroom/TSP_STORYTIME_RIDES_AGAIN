<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="TreeBase">
		<defName>Rylex_Tree_CoconutPalm</defName>
		<label>coconut palm</label>
		<description>A tropical tree with a tall, naked trunk topped by a cluster of very broad leaves. Fortunately, this variety does produce edible coconuts. Don't stand directly underneath!</description>
		<graphicData>
			<texPath>Things/Plant/Trees/TreeCocoPalmA</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.18, 0.3, 0.15)</volume>
				<offset>(0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<statBases>
			<Beauty>2</Beauty>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<ingestible />
		<plant>
			<growDays>32.5</growDays>
			<visualSizeRange>0.8~2.0</visualSizeRange>
			<sowMinSkill>6</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.71</fertilityMin>
			<topWindExposure>0.15</topWindExposure>
			<immatureGraphicPath>Things/Plant/Trees/TreeCocoPalmImmature</immatureGraphicPath>
			<harvestWork>800</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestYield>50</harvestYield>
			<harvestedThingDef>Rylex_Coconut</harvestedThingDef>
			<harvestFailable>true</harvestFailable>
			<harvestAfterGrowth>0.20</harvestAfterGrowth>
			<blockAdjacentSow>true</blockAdjacentSow>
		</plant>
	</ThingDef>
</Defs>
