<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.BackstoryDef Name="BeanBackstories" Abstract="True">
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
	<spawnCategories>
      <li>BeanManBackstory</li>
    </spawnCategories>
  </AlienRace.BackstoryDef>
  
  <AlienRace.BackstoryDef ParentName="BeanBackstories">
    <defName>BeanMan</defName>
    <title>Ascended Bulborb</title>
    <baseDescription>[PAWN_nameDef] was a Bulborb that was granted sapience in a Bean Pit, like all of [PAWN_possessive] kind.</baseDescription>
    <slot>Childhood</slot>
    <skillGains>
      <li>
        <key>Social</key>
        <value>-4</value>
	  </li>

	  <li>
		<key>Plants</key>
        <value>2</value>
      </li>
    </skillGains>
	<forcedTraits>
      <li>
        <defName>BeanMan</defName>
      </li>
    </forcedTraits>
	<disallowedTraits>
		<li>
			<defName>BodyPurist</defName>
		</li>
	</disallowedTraits>
  </AlienRace.BackstoryDef>
  
  <AlienRace.BackstoryDef ParentName="BeanBackstories">
    <defName>BeanManAdult</defName>
    <title>Bean Man</title>
    <baseDescription>[PAWN_nameDef] is a Bean Man. Formerly an ordinary Bulborb, [PAWN_nameDef] was granted sapience at birth by the miraculous implantation of bean-based Glitter World technology.</baseDescription>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <key>Plants</key>
        <value>4</value>
	  </li>
      <li>
        <key>Animals</key>
        <value>4</value>
	  </li>
    </skillGains>
	<forcedTraits>
      <li>
        <defName>BeanMan</defName>
      </li>
    </forcedTraits>
	<disallowedTraits>
		<li>
			<defName>BodyPurist</defName>
		</li>
	</disallowedTraits>
  </AlienRace.BackstoryDef>
</Defs>