<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Name="PartyHatBase" ParentName="ApparelBase" Abstract="True">
	<description>A hat intended to be worn at an event where a group of people do something enjoyable together. For some reason, its top has been torn off.</description>
	<recipeMaker>
		  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		  <workSkill>Crafting</workSkill>
		  <effectWorking>Tailor</effectWorking>
		  <soundWorking>Recipe_Tailor</soundWorking>
		  <recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
		  </recipeUsers>
		  <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PartyHat/PartyHat_ground</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>800</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.5</Mass>
      <Flammability>2</Flammability>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <generateCommonality>0.005</generateCommonality>
    <equippedStatOffsets>
		<SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
	<!-- SHUT MY MOUTH AND SLAP MY GRANDMA! IT NOW ACCEPTS STUFF!! -->
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Woody</li> <!-- Paper -->
	  <li>Fabric</li>
	  <li>Leathery</li>
	  
      <li MayRequire="Dubwise.Rimefeller">Plastic</li>
      <li MayRequire="Dubwise.Rimefeller">Composite</li>
	  <li MayRequire="sarg.alphabiomes">AB_ExoticWooden</li>
    </stuffCategories>
	<!--
    <costList>
      <Cloth>25</Cloth>
    </costList>
	-->
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>MedievalBasic</li>		
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PartyHat/PartyHat</wornGraphicPath>
    </apparel>
	<tradeTags>
		<li>StorytimePartyHats</li>
	</tradeTags>
  </ThingDef>
  
  <ThingDef ParentName="PartyHatBase">
    <defName>StuffPartyHat</defName>
    <label>party hat</label>
  </ThingDef>  
  
