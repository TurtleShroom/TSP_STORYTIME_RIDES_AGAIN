<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="OrganicProductBase">
		<defName>Sloodge</defName>
		<label>sloodge</label>
		<description>A preserved mashed mixture of animal products and plant food. It tastes bland, but is not offensive; unlike Kibble, Pawns will not hate eating it. It lasts a very long time without refrigeration and has just enough nutrients to be worth eating. Unlike Kibble, is still salvagable as an ingredient.</description>
		<thingClass>ThingWithComps</thingClass>
		<thingCategories>
			<li>Foods</li>
			<li>AnimalProductRaw</li>
		</thingCategories>
		<graphicData>
			<texPath>Items/Sloodge</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MarketValue>4</MarketValue>
			<Mass>0.018</Mass>
			<Flammability>0</Flammability>
			<WorkToMake>70</WorkToMake>
			<DeteriorationRate>13</DeteriorationRate>
			<Nutrition>0.39</Nutrition>
		</statBases>
		<ingestible>
			<foodType>Meal, Processed, CarnivoreAnimalStrict, VegetarianRoughAnimal, OmnivoreAnimal, OmnivoreRoughAnimal, OmnivoreHuman, Corpse, Meat, VegetableOrFruit, Seed, Plant, Tree, Fluid, Kibble</foodType>
			<preferability>MealSimple</preferability>
			<ingestEffect>EatMeat</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
			<optimalityOffsetHumanlikes>-1</optimalityOffsetHumanlikes>
			<optimalityOffsetFeedingAnimals>5</optimalityOffsetFeedingAnimals>
		</ingestible>
		<comps Inherit="False">
			<li Class="CompProperties_Rottable">
				<daysToRotStart>180</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<!--
			<li Class="CompProperties_Ingredients">
				<noIngredientsFoodKind>Meat</noIngredientsFoodKind>
			</li>
			-->
			<!-- <li Class="CompProperties_FoodPoisonable" /> -->
		</comps>
		<allowedArchonexusCount>20000</allowedArchonexusCount>
	</ThingDef>
</Defs>
