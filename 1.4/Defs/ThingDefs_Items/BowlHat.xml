<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="ApparelBase">
    <defName>BowlHat</defName>
    <label>bowl hat</label>
    <description>"A child wearing a bowl like this is generally considered to be cute." \n \n A culinary dish or basin worn as a hat. As it is meant to hold food, it has remarkable resistance against heat and burns, and its durability serves as a weak countermeasure to attacks when no helmet is available.</description>
    <recipeMaker>
		  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		  <workSkill>Crafting</workSkill>
		  <effectWorking>Tailor</effectWorking>
		  <soundWorking>Recipe_Tailor</soundWorking>
		  <researchPrerequisite MayRequire="vanillaexpanded.vfeart" Inherit="False">VFE_Res_Pottery</researchPrerequisite>
		  <recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
			<li>CraftingSpot</li>
		  </recipeUsers>
		  <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/BowlHat/BowlHat_ground</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
		<Beauty>4</Beauty> <!-- Pottery -->
		<WorkToMake>1500</WorkToMake>
		<MaxHitPoints>300</MaxHitPoints>
		<Mass>0.4</Mass>
		<Flammability>0.1</Flammability>
		<EquipDelay>0.02</EquipDelay>
		<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
		<ArmorRating_Heat>0.99</ArmorRating_Heat>
    </statBases>
    <generateCommonality>0.15</generateCommonality>
    <equippedStatOffsets>
      <SocialImpact>0.02</SocialImpact>
    </equippedStatOffsets>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <costStuffCount>10</costStuffCount>
    <stuffCategories>
      <li>Woody</li>
	  <li>Stony</li>
	  <li>Metallic</li>
	  
      <li MayRequire="Dubwise.Rimefeller">Plastic</li>
      <li MayRequire="Dubwise.Rimefeller">Composite</li>
      <li MayRequire="sarg.alphabiomes">AB_ExoticMetals</li>
	  <li MayRequire="sarg.alphabiomes">AB_ExoticWooden</li>
    </stuffCategories>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>Neolithic</li>
		<li>GnomeChef</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/BowlHat/BowlHat</wornGraphicPath>
	  <developmentalStageFilter MayRequire="Ludeon.Rimworld.Biotech">Child, Adult</developmentalStageFilter>
    </apparel>
	<tradeTags>
		<li>StorytimeHats</li>
	</tradeTags>
	<inspectorTabs>
		<li>ITab_Art</li>
	</inspectorTabs>
	<comps Inherit="False">
		<li>
			<compClass>CompQuality</compClass>
		</li>
		<li Class="CompProperties_Art" MayRequire="vanillaexpanded.vfeart">
			<nameMaker MayRequire="vanillaexpanded.vfeart">NamerArtSculpture</nameMaker>
			<descriptionMaker MayRequire="vanillaexpanded.vfeart">ArtDescription_Pottery</descriptionMaker>
			<minQualityForArtistic MayRequire="vanillaexpanded.vfeart">Awful</minQualityForArtistic>
