<Defs>
	<RecipeDef>
		<defName>ST_Make_LemonBar</defName>
		<label>make lemon bar</label>
		<description>Make a lemon bar.</description>
		<jobString>Making.</jobString>
		<workAmount>400</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<ingredients>
		  <li>
			<filter>
				<thingDefs>
					<li>ST_GnomeSugar</li>
					<li MayRequire="vanillaexpanded.vcooke">VCE_RawSugar</li>
				</thingDefs>
			</filter>
			<count>25</count>
		  </li>
		  <li>
			<filter>
				<thingDefs>
					<li>ST_Lemon</li>
				</thingDefs>
			</filter>
			<count>25</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ST_GnomeSugar</li>
				<li MayRequire="vanillaexpanded.vcooke">VCE_RawSugar</li>
				<li>ST_Lemon</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>ST_GnomeSugar</li>
				<li MayRequire="vanillaexpanded.vcooke">VCE_RawSugar</li>
				<li>ST_Lemon</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
				<li>ElectricStove</li>
				<li>FueledStove</li>
		</recipeUsers>
		<researchPrerequisite>advancedCooking</researchPrerequisite>
		<products>
			<ST_LemonBar>5</ST_LemonBar>
		</products>
	</RecipeDef>

