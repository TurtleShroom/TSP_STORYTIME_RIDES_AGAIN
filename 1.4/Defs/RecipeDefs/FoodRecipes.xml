<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  <RecipeDef>
    <defName>Make_MeatNugget</defName>
    <label>make meat nugget</label>
    <description>Condense meat into a highly nutritious nugget.</description>
    <jobString>Condensing</jobString>
    <workAmount>70</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>24</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>MeatRaw</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>MeatRaw</li>
      </categories>
    </defaultIngredientFilter>
	<recipeUsers>
    		<li>ElectricStove</li>
		    <li>FueledStove</li>
			<li>Campfire</li>
			<li>GnomeTable</li>
	</recipeUsers>
	<researchPrerequisite>advancedCooking</researchPrerequisite>
	<products>
		<MeatNugget>4</MeatNugget>
	</products>
  </RecipeDef>

<RecipeDef>
    <defName>Make_PadCandy</defName>
    <label>make D-Pad candy</label>
    <description>Grind sugar into candy and shape it like an ancient gaming console controller's Directional Pad... for some reason.</description>
    <jobString>Making.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
					<thingDefs>
						<li>ST_GnomeSugar</li>
						<li MayRequire="vanillaexpanded.vcooke">VCE_RawSugar</li>
						<li MayRequire="aratocat.wonderland">Chocofuel</li>
					</thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
		<thingDefs>
			<li>ST_GnomeSugar</li>
			<li MayRequire="vanillaexpanded.vcooke">VCE_RawSugar</li>
			<li MayRequire="aratocat.wonderland">Chocofuel</li>
		</thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
		<thingDefs>
			<li>ST_GnomeSugar</li>
			<li MayRequire="vanillaexpanded.vcooke">VCE_RawSugar</li>
		</thingDefs>
    </defaultIngredientFilter>
	<recipeUsers>
    		<li>ElectricStove</li>
		    <li>FueledStove</li>
			<li>GnomeTable</li>
			<li>ManualGrinder</li>
			<li>ElectricGrinder</li>
	</recipeUsers>
	<researchPrerequisite>advancedCooking</researchPrerequisite>
	<products>
		<PadCandy>3</PadCandy>
	</products>
  </RecipeDef>

  <RecipeDef>
    <defName>Make_Fuh</defName>
    <label>make Fuh</label>
    <description>Mix cheese, Gnome poppy fibers, and either meat or vegetables into an ornamental, aesthetically pleasing dish.</description>
    <jobString>Mixing Fuh</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
			<li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
	  <li>
        <filter>
			<categories>
				<li MayRequire="vanillaexpanded.vcooke">VCE_Cheese</li>
			</categories>
			<thingDefs>
				<li>ST_ProcessedCheese</li>
			</thingDefs>
        </filter>
        <count>5</count>
      </li>
	  <li>
        <filter>
		  <thingDefs>
			<li>Gnome_Cloth</li>
		  </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>MeatRaw</li>
		<li>PlantFoodRaw</li>
		<li MayRequire="vanillaexpanded.vcooke">VCE_Cheese</li>
      </categories>
	  <thingDefs>
		<li>ST_ProcessedCheese</li>
	  </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>MeatRaw</li>
      </categories>
	  <thingDefs>
		<li>ST_Bean</li>
		<li>ST_ProcessedCheese</li>
		<li>Gnome_Cloth</li>
	  </thingDefs>
    </defaultIngredientFilter>
	<recipeUsers>
    		<li>ElectricStove</li>
		    <li>FueledStove</li>
			<li>GnomeTable</li>
	</recipeUsers>
	<researchPrerequisite>advancedCooking</researchPrerequisite>
	<products>
		<Fuh>8</Fuh>
	</products>
  </RecipeDef>
  
  <RecipeDef>
    <defName>Make_Burrito</defName>
    <label>Make Meaty Five Layer Burritos</label>
    <description>Make Meaty Five Layer Burritos.</description>
    <jobString>imitating Hispanic cuisine</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
					<thingDefs>
						<li>ST_Bean</li>
					</thingDefs>
        </filter>
        <count>5</count>
      </li>
	  <li>
        <filter>
					<categories>
						<li MayRequire="vanillaexpanded.vcooke">VCE_Cheese</li>
					</categories>
					<thingDefs>
						<li>ST_ProcessedCheese</li>
					</thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
		  <thingDefs>
			<li MayRequire="aratocat.wonderland">Chocofuel</li> <!-- Don't ask -->
