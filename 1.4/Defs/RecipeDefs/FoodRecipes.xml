						<li>MeatRaw</li>
						<li>PlantFoodRaw</li>
						<!-- <li MayRequire="vanillaexpanded.vcooke">VCE_Cheese</li> -->
					</categories>
    </defaultIngredientFilter>
	<recipeUsers>
			<li>ElectricStove</li>
			<li>FueledStove</li>
			<li>GnomeTable</li>
	</recipeUsers>
	<researchPrerequisite>advancedCooking</researchPrerequisite>
	<products>
		<TacoBellBurrito>2</TacoBellBurrito>
	</products>
  </RecipeDef>
</Defs>