    <fixedIngredientFilter>
					<thingDefs>
						<li>ST_Bean</li>
						<li>ST_ProcessedCheese</li>
						<li MayRequire="aratocat.wonderland">Chocofuel</li>
					</thingDefs>
					<categories>
						<li>MeatRaw</li>
						<li>PlantFoodRaw</li>
						<li MayRequire="vanillaexpanded.vcooke">VCE_Cheese</li>
