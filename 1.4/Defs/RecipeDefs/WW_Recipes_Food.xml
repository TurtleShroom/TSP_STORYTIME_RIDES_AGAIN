<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<RecipeDef>
		<defName>WW_Make_Sloodge</defName>
		<label>make sloodge</label>
		<description>Sloodge is a preserved combination of animal products and plant food. It tastes bland, but unlike Kibble, Pawns will not be offended if they eat it. It lasts a very long time without refrigeration, and has just enough nutrients to be worth eating.</description>
		<jobString>Making sloodge.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
		</ingredients>
		<products>
			<Sloodge>30</Sloodge>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
				<li>AnimalProductRaw</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
				<li>AnimalProductRaw</li>
			</categories>
			<disallowedThingDefs>
				<li>Meat_Human</li>
				<li>Meat_Megaspider</li>
			</disallowedThingDefs>
			<disallowedCategories>
				<li>EggsFertilized</li>
			</disallowedCategories>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<!-- <researchPrerequisite>Sloodge</researchPrerequisite> -->
		<researchPrerequisites>
			<!-- <li>Sloodge</li> -->
			<li>advancedCooking</li>
		</researchPrerequisites>
		<displayPriority>1440</displayPriority>
	</RecipeDef>

