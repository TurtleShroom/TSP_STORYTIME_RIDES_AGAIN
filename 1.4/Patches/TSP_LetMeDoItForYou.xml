<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/PawnKindDef/baseRecruitDifficulty</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<success>Always</success>
			<xpath>/Defs/PawnKindDef/baseRecruitDifficulty</xpath>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. All according to plan. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/ThingDef/statBases/ToxicSensitivity</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<success>Always</success>
			<xpath>/Defs/ThingDef/statBases/ToxicSensitivity</xpath>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. All according to plan. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/ThingDef/statBases/ToxicSensitivity</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<success>Always</success>
			<xpath>/Defs/ThingDef/equippedStatOffsets/ToxicSensitivity</xpath>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. All according to plan. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/FactionDef/geneticVariance</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<success>Always</success>
			<xpath>/Defs/FactionDef/geneticVariance</xpath>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. All according to plan. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/PawnKindDef/initialWillRange</xpath>
		<!-- If it DOES NOT, add this. -->
		<nomatch Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>Defs/PawnKindDef</xpath>
			<value>
				<initialWillRange>1~3</initialWillRange>
			</value>
		</nomatch>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/PawnKindDef/initialResistanceRange</xpath>
		<!-- If it DOES NOT, add this. -->
		<nomatch Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>Defs/PawnKindDef</xpath>
			<value>
				<initialResistanceRange>2~5</initialResistanceRange>
			</value>
		</nomatch>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/DamageDef/additionalHediffs/li/victimSeverityScaling[text()="ToxicSensitivity"]</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>/Defs/DamageDef/additionalHediffs/li/victimSeverityScaling[text()="ToxicSensitivity"]</xpath>
			<value>
				<victimSeverityScaling>ToxicResistance</victimSeverityScaling>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/StatDef[defName="ToxicSensitivity"]</xpath>
		<!-- If it DOES NOT, add this. -->
		<nomatch Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>/Defs</xpath>
			<value>
				<StatDef>
					<defName>ToxicSensitivity</defName>
					<label>legacy toxic sensitivity (DEPRECATED)</label>
					<description>If you see this, report it to the author of the Mod on which you spotted it. This is not supposed to exist, because it was replaced by the "ToxicResistance" statement.</description>
					<category>BasicsPawn</category>
					<defaultBaseValue>0.99</defaultBaseValue>
					<hideAtValue>0.99</hideAtValue>
					<minValue>0</minValue>
					<toStringStyle>PercentZero</toStringStyle>
					<showIfUndefined>false</showIfUndefined>
					<displayPriorityInCategory>1</displayPriorityInCategory>
				</StatDef>
			</value>
		</nomatch>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
</Patch>