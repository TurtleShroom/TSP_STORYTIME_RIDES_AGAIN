<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <FactionDef>
    <defName>Skeleton_Pirates</defName>
    <label>Skeletal Crew</label>
    <description>Once pirates, these living skeletons are the remains of a greedy pirate crew that willingly exchanged their soul for eternal life. Today, they wander the Rim in search of treasure. Being men, they are capable of complex attacks such taking cover, fleeing, and more, and they carry powerful, deadly weapons.</description>
    <pawnsPlural>Skeletons</pawnsPlural>
    <fixedName>Skeletal Crew</fixedName>
    <canUseAvoidGrid>true</canUseAvoidGrid>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<maxCountAtGameStart>3</maxCountAtGameStart>
	<factionIconPath>Things/Pawn/Humanlike/Apparel/PirateClothing/Tricorn/Tricorn</factionIconPath>
	<basicMemberKind>ST_Skeleton</basicMemberKind>
	<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
			<ST_Skeleton>50</ST_Skeleton>
          <TSP_ST_RetardSkeleton>10</TSP_ST_RetardSkeleton>
		  <ST_GoldSkeleton>15</ST_GoldSkeleton>
		  <ST_PlantSkeleton>15</ST_PlantSkeleton>
		  <ST_AshSkeleton>15</ST_AshSkeleton>
		  <ST_GunSkeleton>2</ST_GunSkeleton>
		  <ST_GunpowderSkeleton>10</ST_GunpowderSkeleton>
		  <ST_SkeletonCaptain>3</ST_SkeletonCaptain>
        </options>
      </li>
	  <li>
        <kindDef>Combat</kindDef>
        <options>
			<ST_Skeleton>50</ST_Skeleton>
          <TSP_ST_RetardSkeleton>5</TSP_ST_RetardSkeleton>
		  <ST_GoldSkeleton>20</ST_GoldSkeleton>
		  <ST_PlantSkeleton>20</ST_PlantSkeleton>
		  <ST_AshSkeleton>5</ST_AshSkeleton>
		  <ST_GunSkeleton>5</ST_GunSkeleton>
		  <ST_SkeletonCaptain>15</ST_SkeletonCaptain>
        </options>
      </li>
    </pawnGroupMakers>
    <permanentEnemy>true</permanentEnemy>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,100)</li>
        <li>(70,150)</li>
        <li>(400,200)</li>
        <li>(900,300)</li>
        <li>(100000,10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	<raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1.4)</li>
        <!-- Constant one and four tenths at all points levels -->
      </points>
    </raidCommonalityFromPointsCurve>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <autoFlee>true</autoFlee>
    <techLevel>Spacer</techLevel> <!-- They can drop in from "magical" pods. They are actually Industrial Tech when it comes to the weapons they use. -->
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>
      <min>-255</min>
      <max>255</max>
    </allowedArrivalTemperatureRange>
 <!--   <modExtensions>
      <li Class="JecsTools.FactionSettings">
        <entrySoundDef>SkeletonPirate_Theme</entrySoundDef>
      </li>
    </modExtensions> -->
  </FactionDef>
</Defs>