<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="HumanFactionBase" Name="CaravanFactionBase">
    <defName>CaravanCoop</defName>
    <label>상단 협동조합</label>
    <description>변방계에 있는 여러 상단원들이 도적들의 약탈 문제로 골머리를 앓자 재산을 보호하기 위해 협동조합을 만들었습니다. 이들은 우호적인 지역에서 교역하여 이익을 얻는 것을 선호합니다.</description>
    <colorSpectrum>
      <li>(0.14, 0.81, 0.81)</li>
      <li>(0.14, 0.81, 0.81)</li>
    </colorSpectrum>
    <startingGoodwill>0</startingGoodwill>
    <naturalColonyGoodwill>-50~50</naturalColonyGoodwill>
    <pawnSingular>상단원</pawnSingular>
    <pawnsPlural>상단원들</pawnsPlural>
    <categoryTag>Outlander</categoryTag>
    <listOrderPriority>30</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>조합장</leaderTitle>
    <factionIconPath>World/Caravan</factionIconPath>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Industrial</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>0.95</commonality>
      </li>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
        <commonality>0.05</commonality>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <hairTags>
      <li>Rural</li>
    </hairTags>
    <caravanTraderKinds>
      <li>Caravan_CaravanCoop_BulkGoods</li>
      <li>Caravan_CaravanCoop_Medical</li>
      <li>Caravan_CaravanCoop_Exotic</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Caravan_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, standard mix -->
        <kindDef>Combat</kindDef>
        <options>
          <Caravan_Patrol>5</Caravan_Patrol>
          <Grenadier_Destructive>3</Grenadier_Destructive>
          <Mercenary_Slasher>10</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>23</Mercenary_Elite>
          <Caravan_CoopLeader>1</Caravan_CoopLeader>
        </options>
      </li>
	  <li>
        <!-- 정예 용병 습격 -->
        <kindDef>Combat</kindDef>
        <options>
		  <Mercenary_Slasher>10</Mercenary_Slasher>
          <Mercenary_Elite>30</Mercenary_Elite>
        </options>
      </li>
	  <li>
        <!-- 순찰병 토벌대 -->
        <kindDef>Combat</kindDef>
        <options>
          <Caravan_Patrol>20</Caravan_Patrol>
        </options>
      </li>
	  <li>
        <!-- 평범한 용병습격 -->
        <kindDef>Combat</kindDef>
        <options>
          <Grenadier_Destructive>2</Grenadier_Destructive>
          <Mercenary_Slasher>15</Mercenary_Slasher>
          <Mercenary_Gunner>20</Mercenary_Gunner>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Villager>7</Villager>
          <Caravan_Patrol>10</Caravan_Patrol>
          <Caravan_CoopLeader>1</Caravan_CoopLeader>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Caravan_Trader>1</Caravan_Trader>
        </traders>
        <carriers>
          <Muffalo>8</Muffalo>
          <Dromedary>8</Dromedary>
          <Alpaca>3</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <Caravan_Patrol>4</Caravan_Patrol>
          <Grenadier_Destructive>2</Grenadier_Destructive>
          <Mercenary_Slasher>13</Mercenary_Slasher>
          <Mercenary_Elite>30</Mercenary_Elite>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Villager>5</Villager>
		  <Caravan_Patrol>3</Caravan_Patrol>
          <Town_Guard>5</Town_Guard>
          <Grenadier_Destructive>3</Grenadier_Destructive>
          <Mercenary_Slasher>14</Mercenary_Slasher>
          <Mercenary_Gunner>9</Mercenary_Gunner>
          <Mercenary_Elite>25</Mercenary_Elite>
          <Caravan_CoopLeader>1</Caravan_CoopLeader>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>
  
</Defs>