			<MorrowRim_BlightedAshlands MayRequire="SirMashedPotato.MorrowRim">0.75</MorrowRim_BlightedAshlands>
			<MorrowRim_AshSwamp MayRequire="SirMashedPotato.MorrowRim.AshSwamp">0.06</MorrowRim_AshSwamp>
			<MorrowRim_VolcanicAshlands MayRequire="SirMashedPotato.MorrowRim.VolcanicAshlands">0.01</MorrowRim_VolcanicAshlands>
	  </wildBiomes>
    </race>
	<tradeTags>
		<li>AnimalExotic</li>
		<li>Skeleton</li>
