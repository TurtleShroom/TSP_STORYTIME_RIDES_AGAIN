						<li>LivingRock</li>
					</tradeTagsSell>
					<tradeTagsBuy>
						<li>LivingRock</li>
					</tradeTagsBuy>
					<kindCountRange>2~12</kindCountRange>
					<countRange>2~12</countRange>
				</li>
			</value>
		</match>
