<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/ThingDef[defName="InsectJelly"]</xpath>
		<!-- If it does, LET'S FASTING GOOOOOOOOOO!!! -->
		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
				<li Class="PatchOperationInsert">
					<xpath>/Defs/RecipeDef/ingredients/li/filter/thingDefs/li[text()="InsectJelly"]</xpath>
					<success>Always</success>
					<value>
						<li MayRequire="eltwofour.mantodeanrace">ElTwoFour_MantodeanJelly</li>
						<li MayRequire="eltwofour.mantodeanrace">ElTwoFour_MantodeanRoyalJelly</li>
						<li MayRequire="sarg.alphaanimals">AB_BumbledroneFood</li>
						<li MayRequire="sarg.rimbees">RB_BeeMilk</li>
