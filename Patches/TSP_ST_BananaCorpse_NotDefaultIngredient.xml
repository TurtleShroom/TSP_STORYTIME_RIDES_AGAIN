<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<!-- Keeps Pawns from seeking this out when it's a seasoning -->
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/ThingDef[defName="ST_BananaScytheCorpse"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<xpath>/Defs/RecipeDef[@Name="CookMealBase"]/defaultIngredientFilter/disallowedThingDefs</xpath>
			<success>Always</success>
			<value>
				<li>ST_BananaScytheCorpse</li>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
    </Operation>
</Patch>