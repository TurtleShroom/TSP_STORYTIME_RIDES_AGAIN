<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>Defs/ThingDef[defName="DankPyon_MineShaft"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<success>Always</success>
			<value>
				<RecipeDef ParentName="DankPyon_MineShaftBase">
					<defName>TSP_ST_MO_MineForBlackium</defName>
					<label>mine for blackium</label>
					<description>Mine deep down underground to obtain blackium.</description>
					<descriptionHyperlinks>
						<ThingDef>ST_Blackium</ThingDef>
					</descriptionHyperlinks>
					<workAmount>3000</workAmount>
					<jobString>Mining for blackium.</jobString>
					<products>
						<ST_Blackium>2</ST_Blackium>
					</products>
					<researchPrerequisites>
						<li>Stonecutting</li>
					</researchPrerequisites>
				</RecipeDef>
				
				<RecipeDef ParentName="DankPyon_MineShaftBase">
					<defName>TSP_ST_MO_MineForSuperNokias</defName>
					<label>mine for Nokia Model 3310 phones</label>
					<description>It will take a long, ardous task to get it, but somewhere in this mine shaft is the hardest material known to man. If one can extract the rocks containing it, he might be able to refine it to get Nokia Model 3310 cellyular phones out of it.</description>
					<descriptionHyperlinks>
						<ThingDef>nokia3310a</ThingDef>
					</descriptionHyperlinks>
					<workAmount>5000</workAmount>
					<jobString>Mining for Nokia Model 3110 phones.</jobString>
					<products>
						<nokia3310a>1</nokia3310a>
					</products>
					<researchPrerequisites>
						<li>Stonecutting</li>
					</researchPrerequisites>
				</RecipeDef>
				
				<RecipeDef ParentName="DankPyon_MineShaftBase">
					<defName>TSP_ST_MO_MineForMinorNokias</defName>
					<label>mine for Nokia Model 8450 phones</label>
					<description>It will take a long, ardous task to get it, but somewhere in this mine shaft is the the durable, beautiful Nokia Model 8450 cellular phone. If one can extract the rocks containing it, he might be able to refine it to get Nokia Model 8450 phones out of it.</description>
					<descriptionHyperlinks>
						<ThingDef>nokia3310a</ThingDef>
					</descriptionHyperlinks>
					<workAmount>3500</workAmount>
					<jobString>Mining for Nokia Model 8450 phones.</jobString>
					<products>
						<nokia8450a>2</nokia8450a>
					</products>
					<researchPrerequisites>
						<li>Stonecutting</li>
					</researchPrerequisites>
				</RecipeDef>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
</Patch>