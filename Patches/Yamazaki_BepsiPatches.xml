    <!-- HYGIENE MOD -->

<!-- Code shamelessly taken from Yamazaki's Bepsi Mod: https://www.steamcommunity.com/sharedfiles/filedetails/?id=1792617578 -->

<Patch>    
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dubs Bad Hygiene</li>
		</mods> 
		<!-- Allows Bebsi to be drinkable if DBH's thirst is enabled -->
		<match Class="PatchOperationAddModExtension">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName = "GnomeBeer" or defName = "BlurberrySpecial" or defName = "ChocSaturday" or defName = "ShortGreenGuy" or defName = "ChocSaturday" or defName = "ST_KrakenRum" or defName = "ST_FogNog" or defName = "Banana_Milk"]</xpath>
			<value>
				<li Class="DubsBadHygiene.WaterExt">
					<water>1</water>
					<UseForWashing>false</UseForWashing>
					<SeekForThirst>true</SeekForThirst>
				</li>
			</value>
		</match>
	</Operation>
	
