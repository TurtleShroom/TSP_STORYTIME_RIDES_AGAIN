<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]/race/leatherDef</xpath>
			<value>
				<leatherDef>Leather_Frog</leatherDef>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]/race/useMeatFrom</xpath>
			<value>
				<useMeatFrom>ST_BullFrog</useMeatFrom>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]/race/lifeStageAges</xpath>
			<value>
				<lifeStageAges>
					<li>
						<def>AnimalBaby</def>
						<minAge>0</minAge>
						<soundAngry>Frog_Angry</soundAngry>
					</li>
					<li>
						<def>AnimalJuvenile</def>
						<minAge>0.09</minAge>
						<soundAngry>Frog_Angry</soundAngry>
					</li>
					<li>
						<def>AnimalAdult</def>
						<minAge>0.25</minAge>
						<soundWounded>Pawn_Iguana_Wounded</soundWounded>
						<soundDeath>Pawn_Iguana_Death</soundDeath>
						<soundCall>Pawn_Iguana_Call</soundCall>
						<soundAngry>Frog_Angry</soundAngry>
					</li>
				</lifeStageAges>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]/tradeTags</xpath>
			<value>
				<li>AnimalFrog</li>
				<li>AnimalCommon</li>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="HC_Bullfrog"]/tradeTags</xpath>
			<value>
				<li>AnimalFrog</li>
				<li>AnimalCommon</li>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="Forg_Duo"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAddModExtension">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName="HC_Bullfrog"]</xpath>
			<value>
				<li Class="AnimalBehaviours.AnimalStatExtension">
					<statToAdd>
						<li>ST_FrogRole</li>
						<li>ST_FrogRarity</li>					
					</statToAdd>
					<statValues>
						<li>TSP_ST_FrogNormal</li>
						<li>ST_FrogCommon</li>					
					</statValues>
					<statDescriptions>
						<li>TSP_ST_FrogNormalDesc</li>
						<li>ST_FrogCommonDesc</li>
					</statDescriptions>
				</li>
			</value>
		</match>
	</Operation>
</Patch>