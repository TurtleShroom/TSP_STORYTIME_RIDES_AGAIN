<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<!-- Aelanna's Model No-Match Detector and Insertion Code -->
	<!-- Special thanks to Aelanna for straight-up saving me scores of headaches! -->
	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/PawnKindDef[defName="Toxalope"]/race</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/PawnKindDef[defName="Toxalope"]</xpath>
			<success>Always</success>
			<value>
				<race>Toxalope</race>
			</value>
		</nomatch>
	</Operation>
	
	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]</xpath>
			<success>Always</success>
			<value>
				<comps></comps>
			</value>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/comps</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/comps</xpath>
			<value>
				<comps>
					<li Class="CompProperties_Forbiddable"></li> <!-- 上一步我们加的修复，保留 -->
					<li Class="CompProperties_Drug">
						<listOrder>1000</listOrder>
					</li>
				</comps>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/orderedTakeGroup</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/orderedTakeGroup</xpath>
			<value>
				<orderedTakeGroup>Drug</orderedTakeGroup>
			</value>
		</match>
		<!-- If it DOES NOT, add this instead. -->
		<nomatch Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]</xpath>
			<value>
				<orderedTakeGroup>Drug</orderedTakeGroup>
			</value>
		</nomatch>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/ingestible</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]</xpath>
			<success>Always</success>
			<value>
				<ingestible></ingestible>
			</value>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/ingestible/drugCategory</xpath>
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/ingestible/drugCategory</xpath>
			<success>Always</success>
			<value>
				<drugCategory>Any</drugCategory>
			</value>
		</match>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="iiwmColaDrink"]/ingestible</xpath>
			<success>Always</success>
			<value>
				<drugCategory>Any</drugCategory>
			</value>
		</nomatch>
	</Operation>
</Patch>