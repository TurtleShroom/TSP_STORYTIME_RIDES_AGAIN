	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="DankPyon_JuiceAppleUnfermented"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="DankPyon_JuiceAppleUnfermented"]</xpath>
			<success>Always</success>
			<value>
				<thingCategories Inherit="False"></thingCategories>
			</value>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/ThingDef[defName="DankPyon_JuiceAppleUnfermented"]/thingCategories</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName="DankPyon_JuiceAppleUnfermented"]/thingCategories</xpath>
			<success>Always</success>
			<value>
				<thingCategories Inherit="False">
					<li>Manufactured</li>
					<li MayRequire="vanillaexpanded.vbrewe">VBE_Musts</li>
				</thingCategories>
			</value>
		</match>
		<!--If the first XPATH does not exist, the original code stands. -->
	</Operation>
</Patch>