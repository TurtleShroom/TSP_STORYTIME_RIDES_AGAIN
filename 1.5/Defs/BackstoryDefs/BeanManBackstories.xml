<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.AlienBackstoryDef Name="BeanBackstories" Abstract="True">
	<ignoreIllegalLabelCharacterConfigError>true</ignoreIllegalLabelCharacterConfigError>
	<!--
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
	-->
	<spawnCategories>
      <li>BeanManBackstory</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
  
  <AlienRace.AlienBackstoryDef ParentName="BeanBackstories">
    <defName>BeanMan</defName>
    <title>Ascended Bulborb</title>
	<titleShort>Bean Man</titleShort>
    <baseDesc>[PAWN_nameDef] was a Bulborb that was granted sapience in a Bean Pit, like all of [PAWN_possessive] kind.</baseDesc>
    <slot>Childhood</slot>
    <skillGains>
      <Social>-4</Social>
	  <Plants>2</Plants>
    </skillGains>
	<forcedTraitsChance>
      <li>
        <defName>BeanMan</defName>
		<chance>100</chance>
      </li>
    </forcedTraitsChance>
	<disallowedTraits>
		<BodyPurist>0</BodyPurist>
	</disallowedTraits>
	<spawnCategories>
		<li>BeanManChildEye</li>
	</spawnCategories>
	<linkedBackstory>BeanManAdult</linkedBackstory>
  </AlienRace.AlienBackstoryDef>
  
  <AlienRace.AlienBackstoryDef ParentName="BeanBackstories">
    <defName>BeanManAdult</defName>
    <title>Bean Man</title>
	<titleShort>Bean Man</titleShort>
    <baseDesc>[PAWN_nameDef] is a Bean Man. Formerly an ordinary Bulborb, [PAWN_nameDef] was granted sapience at birth by the miraculous implantation of bean-based Glitter World technology.</baseDesc>
    <slot>Adulthood</slot>
    <skillGains>
      <Plants>4</Plants>
      <Animals>4</Animals>
    </skillGains>
	<forcedTraitsChance>
      <li>
        <defName>BeanMan</defName>
		<chance>100</chance>
      </li>
    </forcedTraitsChance>
	<disallowedTraits>
		<BodyPurist>0</BodyPurist>
	</disallowedTraits>
	<linkedBackstory>BeanMan</linkedBackstory>
	<spawnCategories>
		<li>BeanManAdult</li>
	</spawnCategories>
  </AlienRace.AlienBackstoryDef>
  
	<AlienRace.AlienBackstoryDef MayRequire="ludeon.rimworld.biotech,vanillaracesexpanded.archon">
		<defName>TSP_VFERA_BeanMan_Archon</defName>
		<title>Archotech Bulborb</title>
		<titleShort>Archon Bean Man</titleShort>
		<baseDesc>The transcendance of Glitter Worlds allowed for Archotechs to capture the technology for making sapient Bulborbs. [PAWN_nameDef] was such a Bulborb, empowered by the legendary might of the Archons beyond that which a normal Bean Pit could ever produce.</baseDesc>
		<slot>Childhood</slot> <!-- Uses Archon Mod Adulthood Backstories -->
		<ignoreIllegalLabelCharacterConfigError>true</ignoreIllegalLabelCharacterConfigError>
		<skillGains>
			<Plants>3</Plants>
			<Animals>3</Animals>
			<Mining>1</Mining>
			<Intellectual>4</Intellectual>
			<Social>1</Social>
		</skillGains>
		<forcedTraitsChance>
			<li>
				<defName>BeanMan</defName>
				<chance>100</chance>
			</li>
		</forcedTraitsChance>
		<disallowedTraits>
			<BodyPurist>0</BodyPurist>
			<Kind>0</Kind>
		</disallowedTraits>
		<spawnCategories>
			<li>TSP_ArchonBulborb_ChildEye</li>
		</spawnCategories>
	</AlienRace.AlienBackstoryDef>
</Defs>