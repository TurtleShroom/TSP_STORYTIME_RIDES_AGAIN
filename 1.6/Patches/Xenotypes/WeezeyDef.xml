<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>Defs/ThingDef[defName="Genepack"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<success>Always</success>
			<value>
				<XenotypeIconDef MayRequire="ludeon.rimworld.biotech">
					<defName MayRequire="ludeon.rimworld.biotech">Weezey</defName>
					<texPath MayRequire="ludeon.rimworld.biotech">UI/Icons/Xenotypes/TSP_ST_Weezerling</texPath>
				</XenotypeIconDef>  

				<XenotypeDef MayRequire="ludeon.rimworld.biotech">
					<defName MayRequire="ludeon.rimworld.biotech">Weezey</defName>
					<label MayRequire="ludeon.rimworld.biotech">Weezerling</label>
					<description MayRequire="ludeon.rimworld.biotech">A man who has been genetically modified with innate Mechanites that spontaneously generate Weezer albums. He feels just like Buddy Holly, but he didn't marry Tyler Moore.</description>
					<iconPath MayRequire="ludeon.rimworld.biotech">UI/Icons/Xenotypes/TSP_ST_Weezerling</iconPath>
					<inheritable MayRequire="ludeon.rimworld.biotech">true</inheritable>
					<combatPowerFactor MayRequire="ludeon.rimworld.biotech">1</combatPowerFactor>
					<factionlessGenerationWeight>0.29</factionlessGenerationWeight>
					<genes MayRequire="ludeon.rimworld.biotech">
						<li>Skin_Weezer</li>
						<li>WeezerGene</li>
						<li>Hair_Grayless</li>
						<li>Hair_LightOrange</li>
						<li>Beauty_Beautiful</li>
						<li MayRequire="seioch.biotech.animeeyes">ANI_Eyes</li>
						<li MayRequire="dimonsever000.genes.specific">SenseOrgans_AdvancedTalking</li>
					</genes>
				</XenotypeDef>
			</value>
		</match>
	</Operation>
</Patch>