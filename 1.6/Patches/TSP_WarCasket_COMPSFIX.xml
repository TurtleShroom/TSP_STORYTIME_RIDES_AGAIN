			<success>Always</success>
			<xpath>Defs/VFEPirates.WarcasketDef[defName="Warcasket_joris"]/modExtensions</xpath>
			<value>
				<modExtensions>
					<li Class="VEF.Apparels.ApparelExtension">
						<traitsOnEquip>
							<li>VFEP_WarcasketTrait</li>
						</traitsOnEquip>
						<traitsOnUnequip>
							<li>VFEP_Shellcasket</li>
						</traitsOnUnequip>
						<pawnCapacityMinLevels>
							<li>
								<capacity>Moving</capacity>
								<minLevel>0.7</minLevel>
							</li>
							<li>
								<capacity>Manipulation</capacity>
								<minLevel>0.7</minLevel>
							</li>
						</pawnCapacityMinLevels>
					</li>
				</modExtensions>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
