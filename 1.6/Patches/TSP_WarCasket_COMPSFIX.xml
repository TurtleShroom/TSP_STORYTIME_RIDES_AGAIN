	<Operation Class="PatchOperationConditional">
		<!-- Does this exist? -->
		<xpath>Defs/VFEPirates.WarcasketDef[defName="Warcasket_joris"]/modExtensions</xpath>
		<!-- If it does, do this replacement. -->
