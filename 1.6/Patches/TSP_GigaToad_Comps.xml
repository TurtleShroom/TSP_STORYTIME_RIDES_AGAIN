<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>Defs/ThingDef[defName="KingToad"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAddModExtension">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName="KingToad"]</xpath>
			<value>
				<li Class="VEF.AnimalBehaviours.AnimalStatExtension" MayRequire="oskarpotocki.vanillafactionsexpanded.core">
					<statToAdd MayRequire="oskarpotocki.vanillafactionsexpanded.core">
						<li>ST_FrogRole</li>
						<li>ST_FrogRarity</li>
					</statToAdd>
					<statValues MayRequire="oskarpotocki.vanillafactionsexpanded.core">
						<li>ST_MeleeTank</li>
						<li>ST_FrogLegendary</li>
					</statValues>
					<statDescriptions MayRequire="oskarpotocki.vanillafactionsexpanded.core">
						<li>ST_MeleeTankDesc</li>
						<li>ST_FrogLegendaryDesc</li>
					</statDescriptions>
				</li>
			</value>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
	<xpath>Defs/ThingDef[defName="GiantToad"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAddModExtension">
			<success>Always</success>
			<xpath>Defs/ThingDef[defName="GiantToad"]</xpath>
			<value>
				<li Class="VEF.AnimalBehaviours.AnimalStatExtension" MayRequire="oskarpotocki.vanillafactionsexpanded.core">
					<statToAdd MayRequire="oskarpotocki.vanillafactionsexpanded.core">
						<li>ST_FrogRole</li>
						<li>ST_FrogRarity</li>
					</statToAdd>
					<statValues MayRequire="oskarpotocki.vanillafactionsexpanded.core">
						<li>ST_MeleeTank</li>
						<li>ST_FrogUncommon</li>
					</statValues>
					<statDescriptions MayRequire="oskarpotocki.vanillafactionsexpanded.core">
						<li>ST_MeleeTankDesc</li>
						<li>ST_FrogUncommonDesc</li>
					</statDescriptions>
				</li>
			</value>
		</match>
	</Operation>
</Patch>