<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<HediffDef>
		<defName>ST_HedUnholyAbomination</defName>
		<label>Abomination</label>
		<description>Randy himself has turned away from this creature in disgust. It shouldn't exist and lives in constant agony as a result.</description>		
		<initialSeverity>1</initialSeverity>
		<defaultLabelColor>(255, 125, 0)</defaultLabelColor>      	
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>true</isBad>
		<makesSickThought>true</makesSickThought>
		<tendable>false</tendable>
		<scenarioCanAdd>false</scenarioCanAdd>
		<everCurableByItem>false</everCurableByItem>
		<preventsPregnancy>true</preventsPregnancy>
		<chronic>true</chronic>
		<!-- <priceImpact>0.5</priceImpact> -->
		<stages>
			<li>
				<painOffset>0.2</painOffset>
				<statOffsets>
					<PainShockThreshold>0.15</PainShockThreshold>
					<VacuumResistance MayRequire="ludeon.rimworld.odyssey">1</VacuumResistance>
				</statOffsets>
				<disablesNeeds>
					<li MayRequire="VanillaExpanded.VMemesE">VME_Anonymity</li>
					<li MayRequire="VanillaExpanded.VMemesE">VME_Corruption</li>
				</disablesNeeds>
			</li>
		</stages>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
	</HediffDef>
</Defs>
