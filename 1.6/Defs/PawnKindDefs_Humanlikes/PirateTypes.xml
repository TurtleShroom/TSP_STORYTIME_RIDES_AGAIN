<Defs>
	<PawnKindDef Abstract="True" Name="BasePlayerStorytimePiratePawnKind">
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<minGenerationAge Inherit="False">15</minGenerationAge> <!-- They don't field young children -->
		<maxGenerationAge>45</maxGenerationAge>
		<invFoodDef>ST_Lime</invFoodDef>
		<invNutrition>2.55</invNutrition>
		<!-- <baseRecruitDifficulty>0.4</baseRecruitDifficulty> -->
		<forceNormalGearQuality>true</forceNormalGearQuality>
		<backstoryFilters>
			<li>
				<categories>
					<li>PirateBackstory</li>
				</categories>
			</li>
		</backstoryFilters>
		<apparelTags>
			<li>K4GEyepatch</li>
		</apparelTags>
	</PawnKindDef>
  
	<PawnKindDef ParentName="BasePlayerStorytimePiratePawnKind" Name="StorytimePirateBackstoryDefault" Abstract="True">
