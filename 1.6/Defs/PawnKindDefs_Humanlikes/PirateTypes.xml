			</li>
			<li>
				<categoriesAdulthood>
					<li>PirateBackstory</li>
				</categoriesAdulthood>
			</li>
		</backstoryFilters>
		<isFighter>true</isFighter>
	</PawnKindDef>
  
  <PawnKindDef ParentName="StorytimePirateBackstoryDefault">
    <defName>PirateSwabbie</defName>
    <label>swabbie</label>
    <combatPower>20</combatPower>
    <chemicalAddictionChance>0.1</chemicalAddictionChance>
    <apparelMoney>
