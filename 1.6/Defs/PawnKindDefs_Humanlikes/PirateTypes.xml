		<li>PoorPirate</li>
		<li>K4GShatteredBottle</li>
    </weaponTags>
	<apparelRequired>
		<li>PirateBandana</li>
	</apparelRequired>
    <inventoryOptions>
      <subOptionsChooseOne>
        <li>
          <thingDef>ST_KrakenRum</thingDef>
          <countRange>1~2</countRange>
        </li>
