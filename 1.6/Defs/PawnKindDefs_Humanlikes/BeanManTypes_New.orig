<?xml version="1.0" encoding="utf-8"?>

<Defs>
<!--Bean Guardians -->

  <PawnKindDef ParentName="BasePlayerBeanManPawnKind">
    <defName>BeanGuardianBasic</defName>
    <label>bean guardian</label>
    <combatPower>55</combatPower>
    <!-- <defaultFactionType>BeanGuardians</defaultFactionType> -->
    <isFighter>true</isFighter>
    <gearHealthRange>0.6~2</gearHealthRange>
    <apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
    <apparelTags>
      <li>IndustrialBasic</li>
    </apparelTags>
    <apparelMoney>150~400</apparelMoney>
	<backstoryFiltersOverride Inherit="False">
		<li>
			<categoriesChildhood>
				<li>BeanGuardian</li>
				<li>BeanManBackstory</li>
				<li>BeanManChildEye</li>
			</categoriesChildhood>
		</li>
		<li>
			<categoriesAdulthood>
				<li>BeanGuardian</li>
			</categoriesAdulthood>
		</li>
	</backstoryFiltersOverride>
    <weaponTags>
      <li>Gun</li>
      <li>MedievalMeleeDecent</li>
    </weaponTags>
    <weaponMoney>100~500</weaponMoney>
    <techHediffsChance>0.04</techHediffsChance>
    <techHediffsMoney>200~700</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
    <initialWillRange>1~4</initialWillRange>
    <initialResistanceRange>5~10</initialResistanceRange>
    <inventoryOptions>
      <subOptionsChooseOne>
        <li>
          <thingDef>ST_RouletteBean</thingDef>
          <countRange>1~5</countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
 
