<!-- Savant -->
	<TraitDef>
		<defName>ST_Savant</defName>
		<commonality>0.05</commonality>
		<degreeDatas>
			<li>
				<label>Savant</label>
				<description>{PAWN_nameDef} is exceptionally gifted at research, but almost completely incapable of socializing.</description>
				<skillGains>
					<Intellectual>8</Intellectual>
					<Social>-12</Social>
				</skillGains>
				<statOffsets>
					<ResearchSpeed>2</ResearchSpeed>
					<TradePriceImprovement>-0.80</TradePriceImprovement>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>ST_Stupid</li>
			<li>SlowLearner</li>
		</conflictingTraits>
		<requiredWorkTags>
		  <li>Intellectual</li>
		</requiredWorkTags>
	</TraitDef>		

	<!-- Impatient Surgeon -->
	<TraitDef>
		<defName>ST_Surgeon</defName>
		<commonality>0.33</commonality>
		<forcedPassions>
			<li>Medicine</li>
		</forcedPassions>
		<requiredWorkTags>
			<li>Caring</li>
		</requiredWorkTags>
		<degreeDatas>
			<li>
				<label>Impatient Surgeon</label>
				<description>{PAWN_nameDef} has a passion for medical work. Unfortunately, {PAWN_possessive} enthusiasm is not matched by the willingness to take {PAWN_possessive} time. As a result {PAWN_pronoun} can tend wounds quickly, but not effectively.</description>
				<skillGains>
					<Medicine>4</Medicine>
				</skillGains>
				<statOffsets>
					<MedicalTendQuality>-0.25</MedicalTendQuality>
					<MedicalTendSpeed>2</MedicalTendSpeed>
					<MedicalOperationSpeed>1.5</MedicalOperationSpeed>
				</statOffsets>
			</li>
		</degreeDatas>
	</TraitDef>
	
</Defs>
