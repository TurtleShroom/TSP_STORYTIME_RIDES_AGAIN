  <ThingDef ParentName="LeatherBase">
    <defName>Leather_Goblin</defName>
    <label>goblin hide</label>
	<description>The skin of a goblin that has been tanned, dried, and scraped. Due to the combination of goblins being hideous and sapient, wearing this leather rarely nets the approval of other sapient beings that aren't cannibals.</description>
    <graphicData>
      <color>(110,100,30)</color>
    </graphicData>
	<statBases>
      <MarketValue>1</MarketValue>
    </statBases>
    <stuffProps>
      <color>(0,100,0)</color>
      <commonality>0.001</commonality>
    </stuffProps>
  </ThingDef>
 
