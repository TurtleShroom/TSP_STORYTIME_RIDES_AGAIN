<Defs>
   <ThingDef ParentName="ResourceBase">
    <defName>ST_BlackMixture</defName>
    <label>black mixture</label>
    <description>It's a bunch of iron and blackium mixed up together. Extreme heat (1000°) can turn it to Black Steel. This mixture can only be processed in a Blast Furnace.</description>
    <graphicData>
      <texPath>Things/Items/Resources/AlloyDust/BlackDust</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
		<DeteriorationRate>0</DeteriorationRate>
		<MarketValue>0.1</MarketValue>
		<Mass>0.5</Mass>
		<Flammability>0</Flammability>
    </statBases>
	<stackLimit>180</stackLimit>
	<tradeability>Sellable</tradeability>
    <soundInteract>Metal_Drop</soundInteract>
	<tickerType>Rare</tickerType>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ST_AlloyMixtures</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
	<comps>
		<!-- FROM VanillaCookingExpanded.CompProperties_TempTransforms -->
		<!-- TO VanillaCookingExpanded.CompProperties_TempTransforms -->
		<li Class="VEF.Cooking.CompProperties_TempTransforms" MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
			<minSafeTemperature>-1000</minSafeTemperature>
			<maxSafeTemperature>537</maxSafeTemperature>
			<progressPerDegreePerTick>0.002</progressPerDegreePerTick>
			<thingToTransformInto>ST_BlackSteel</thingToTransformInto>
		</li>
		<li Class="CompProperties_Ingredients"></li>
	</comps>
  </ThingDef> 
  
