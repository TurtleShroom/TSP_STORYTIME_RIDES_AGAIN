<Defs>
	<ThingDef ParentName="MealBase">
		<defName>FruitBatta</defName>
		<label>Fruit Batta dish</label>
		<description>"Batta" refers to any traditional Gnome dish served in a wrapping of bread (usually derived from Gnome Flour, but several other grains will do). It actually smells quite good. This particular Batta dish consists of fruit and berries.</description>
		<graphicData>
		  <texPath>Things/Items/GnomeFood/FruitBatta</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <drawSize>1.5</drawSize>
		</graphicData>
		<statBases>
		  <DeteriorationRate>0.25</DeteriorationRate>
		  <MarketValue>24</MarketValue>
		  <Mass>0.3</Mass>
		  <WorkToMake>450</WorkToMake>
		  <Nutrition>1.2</Nutrition>
		</statBases>
		<ingestible>
		  <preferability>MealFine</preferability>
		  <ingestEffect>EatVegetarian</ingestEffect>
		  <ingestSound>Meal_Eat</ingestSound>
		  <outcomeDoers>
			<li Class="IngestionOutcomeDoer_GiveHediff">
			  <hediffDef>HedBatta</hediffDef>
			  <severity>1</severity>
			</li>
		  </outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>4</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Ingredients">
				<noIngredientsFoodKind>NonMeat</noIngredientsFoodKind>
			</li>
		</comps>
		<tradeTags>
			<li>GnomeBatta</li>
			<!-- <li>GnomeVegetarian</li> -->
		</tradeTags>
	</ThingDef>

