<Defs>
	<SoundDef>
		<defName>TSP_ST_ALBARRY_StephenColbert_Frog_Call</defName>
		<context>MapOnly</context>
		<eventNames></eventNames>
		<maxVoices>5</maxVoices>
		<maxSimultaneous>1</maxSimultaneous> 
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>FunnyAnimals/TSP_ALBARRY_colbert_normal1</clipPath>
					</li>
					<!--
					<li Class="AudioGrain_Clip">
						<clipPath>FunnyAnimals/TSP_ALBARRY_colbert_normal2</clipPath>
					</li>
					-->
					<li Class="AudioGrain_Clip">
						<clipPath>FunnyAnimals/TSP_ALBARRY_colbert_normal3</clipPath>
					</li>
				</grains>
				<volumeRange>
					<min>45</min>
					<max>55</max>
				</volumeRange>      
				<pitchRange>
					<min>0.97</min>
					<max>1.0</max>
				</pitchRange>      
				<distRange>
					<min>0</min>        
					<max>75</max>
				</distRange>      
				<!-- <repeatMode>NeverTwice</repeatMode> -->
				<sustainLoop>False</sustainLoop>
			</li>
		</subSounds>
	</SoundDef>

