    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,125)</li>
        <li>(70,175)</li>
        <li>(400,250)</li>
        <li>(900,300)</li>
        <li>(100000,10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	<raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  1000)</li>
        <li>(5000, 2000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1.4)</li>
        <!-- Constant one and four tenths at all points levels -->
      </points>
    </raidCommonalityFromPointsCurve>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <autoFlee>true</autoFlee>
    <techLevel>Spacer</techLevel> <!-- They can drop in from "magical" pods. They are actually Industrial Tech when it comes to the weapons they use. -->
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>
      <min>-999</min>
      <max>999</max>
    </allowedArrivalTemperatureRange>
