			<ST_SkeletonCaptain>15</ST_SkeletonCaptain>
			<SpookySkeleton MayRequire="tsp.halloweenie.integrationmore">1</SpookySkeleton>
			<Reaper MayRequire="tsp.halloweenie.integrationmore">1</Reaper>
        </options>
      </li>
	  <li>
        <kindDef>Combat</kindDef>
		<commonality>50</commonality>
        <options>
			<ST_Skeleton>5</ST_Skeleton>
			<ST_GoldSkeleton>1</ST_GoldSkeleton>
			<ST_PlantSkeleton>1</ST_PlantSkeleton>
			<ST_AshSkeleton>1</ST_AshSkeleton>
			<ST_GunSkeleton>35</ST_GunSkeleton>
			<ST_GunpowderSkeleton>10</ST_GunpowderSkeleton>
			<ST_SkeletonCaptain>3</ST_SkeletonCaptain>
			<SpookySkeleton MayRequire="tsp.halloweenie.integrationmore">5</SpookySkeleton>
			<Reaper MayRequire="tsp.halloweenie.integrationmore">1</Reaper>
