<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <FactionDef>
    <defName>Skeleton_Pirates</defName>
    <label>Skeletal Crew</label>
    <description>Once pirates, these living skeletons are the remains of a greedy pirate crew that willingly exchanged their soul for eternal life. Today, they wander the Rim in search of treasure. Being men, they are capable of complex attacks such taking as cover, fleeing, and more, and they carry powerful, deadly weapons. However, being skeletons without muscles, they cannot perform sieges.</description>
    <pawnsPlural>Skeletons</pawnsPlural>
    <fixedName>Skeletal Crew</fixedName>
    <canUseAvoidGrid>true</canUseAvoidGrid>
	<!-- <settlementGenerationWeight>0</settlementGenerationWeight> -->
	<requiredCountAtGameStart>1</requiredCountAtGameStart>
	<maxCountAtGameStart>2</maxCountAtGameStart>
	<maxConfigurableAtWorldCreation>2</maxConfigurableAtWorldCreation>
	<canMakeRandomly>true</canMakeRandomly>
	<canStageAttacks>true</canStageAttacks>
	<factionIconPath>Things/Pawn/Humanlike/Apparel/PirateClothing/Tricorn/Tricorn</factionIconPath>
	<basicMemberKind>ST_Skeleton</basicMemberKind>
	<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
	<displayInFactionSelection>false</displayInFactionSelection>
    <arrivalLayerWhitelist Inherit="False">
      <li>Surface</li>
      <li MayRequire="Ludeon.RimWorld.Odyssey">Orbit</li> <!-- OH, YOU THINK YOU ARE SAFE?! YOU FOOL!! -->
    </arrivalLayerWhitelist>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
		<commonality>100</commonality>
        <options>
			<ST_Skeleton>50</ST_Skeleton>
			<TSP_ST_RetardSkeleton>10</TSP_ST_RetardSkeleton>
			<ST_GoldSkeleton>15</ST_GoldSkeleton>
			<ST_PlantSkeleton>15</ST_PlantSkeleton>
			<ST_AshSkeleton>15</ST_AshSkeleton>
			<ST_GunSkeleton>2</ST_GunSkeleton>
			<ST_GunpowderSkeleton>10</ST_GunpowderSkeleton>
			<ST_SkeletonCaptain>3</ST_SkeletonCaptain>
			<SpookySkeleton MayRequire="tsp.halloweenie.integrationmore">10</SpookySkeleton>
			<Reaper MayRequire="tsp.halloweenie.integrationmore">5</Reaper>
        </options>
      </li>
	  <li>
        <kindDef>Combat</kindDef>
		<commonality>80</commonality>
        <options>
			<ST_Skeleton>5</ST_Skeleton>
			<ST_GoldSkeleton>20</ST_GoldSkeleton>
