  <RecipeDef>
    <defName>Make_GnomeWort</defName>
    <label>make gnome wort</label>
    <description>Make gnome wort from the byproducts of the Gnome Root poppy or from Gnome Sugar.</description>
    <jobString>Making gnome wort.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GnomeFlour</li>
			<li>Gnome_Cloth</li>
			<li>ST_GnomeSugar</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GnomeFlour</li>
		<li>Gnome_Cloth</li>
		<li>ST_GnomeSugar</li>
      </thingDefs>
    </fixedIngredientFilter>
	<defaultIngredientFilter>
		<thingDefs>
			<li>GnomeFlour</li>
		</thingDefs>
	</defaultIngredientFilter>
	<recipeUsers>
    	<li>Brewery</li>
		<li>GnomeTable</li>
		<li MayRequire="vanillaexpanded.vbrewe">VBE_Bar</li>
	</recipeUsers>
	<researchPrerequisites>
		<li>ST_GnomeCulture</li>
		<li>Brewing</li>
	</researchPrerequisites>
    <products>
      <GnomeWort>10</GnomeWort>
    </products>
  </RecipeDef>
  
